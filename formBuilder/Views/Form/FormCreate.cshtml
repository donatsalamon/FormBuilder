@model formBuilder.Models.Form

<h1>Form Create Page</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FormCreate">
            <div class="form-group">
                <label asp-for="nameOftheForm" class="control-label"></label>
                <input asp-for="nameOftheForm" class="form-control" />
