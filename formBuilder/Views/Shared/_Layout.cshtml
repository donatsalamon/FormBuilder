<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - formBuilder</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap2/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/formBuilder.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/light.css">
</head>
<body data-sidebar-position="left" data-layout="fluid" data-sidebar-layout="default">
    @*this wrapper puts the context into 1 line*@
    <div class="wrapper">
        <header>
            <nav id="sidebar" class="sidebar js-sidebar">
                <div class="sidebar-content js-simplebar">
                    <a class="sidebar-brand" style="color:white" asp-area="" asp-controller="QuestionSheet" asp-action="Answers">Back To the Main Page</a>
                    <ul class="sidebar-nav">
                        <li class="sidebar-header">
                            Pages
                        </li>
                        <li class="sidebar-item">
                            <a data-bs-target="#pages" data-bs-toggle="collapse" class="sidebar-link collapsed" aria-expanded="false">
                                <i class="align-middle" data-feather="layout"></i> <span class="align-middle" style="color:white">Survey</span>
                            </a>
                            <ul id="pages" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-area="" asp-controller="Form" asp-action="SettingsForForms">Form settings</a>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-area="" asp-controller="Form" asp-action="FormsPage">Forms Page</a>
                                </li>
                                <li class="sidebar-item">
                                    <a class="sidebar-link" asp-area="" asp-controller="QuestionSheet" asp-action="Answers">Answers</a>
                                </li>
                                 <li class="sidebar-item">
                                    <a class="sidebar-link" asp-area="" asp-controller="QuestionSheet" asp-action="StatementPage">Statements</a>
                                </li>
                            </ul>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </nav>
        </header>

        <div class="main">
            <nav class="navbar navbar-expand navbar-dark navbar-bg">
                <a class="sidebar-toggle js-sidebar-toggle">
                    <i class="hamburger align-self-center"></i>
                </a>

            </nav>
            <main class="content">
                @RenderBody()
            </main>
        </div>

        @*    <footer class="border-top footer text-muted">
        <div class="container">
        &copy; 2023 - formBuilder - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        </footer>*@


    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/app.js"></script>
    <script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
