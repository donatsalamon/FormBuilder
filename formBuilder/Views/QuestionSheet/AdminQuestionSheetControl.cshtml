@model List<formBuilder.Models.QuestionSheet>


<form asp-controller="QuestionSheet" asp-action="AdminQuestionSheetControl" method="get">
    Filter: <input type="text" name="searchString" />
    <input type="submit" value="Filter" />
</form>

<h1>@Model[0].formName</h1>

<p>
    <a asp-controller="QuestionSheet" asp-route-FormId="@Model[0].FormId" asp-action="Create">Create a new Question</a>
</p>

@{
    if (@Model[0].Id== 0)
    {
        <p>This form is empty</p>
    }
    else
    {
        //<p>
        //    <a asp-controller="QuestionSheet" asp-route-FormId="@Model[0].FormId" asp-action="Create">Create a new Question</a>
        //</p>

        <p>
            <a asp-route-id="@Model[0].FormId" asp-controller="QuestionSheet" asp-action="Fill">Fill the Sheet</a>
        </p>


        <table class="table">
            <thead>
                <tr>
                    <th>
                        Question
                    </th>
                    <th>
                        Type of the Qeustion
                    </th>
                    <th>
                        Added Description
                    </th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Question)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.questionType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddedDescription)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" asp-route-FormId="@item.FormId">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}